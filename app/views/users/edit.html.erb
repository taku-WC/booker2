<div class='container'>

	<% if @user.errors.any? %>
	   <%= @user.errors.count %>errors prohibited this obj from being saved:
		<% @user.errors.full_messages.each do |message| %>
			<div class="form-error">
			  <%= message %>
			</div>
		<% end %>
	<% end %>
	<h2>User info</h2>

	<div class="form-body">

		<%= form_for(@user) do |f| %>
			<div class="form-group has-icon"><!--name-->
				<label>Name</label>
				<%= f.text_field :name, autofocus: true, id:"inputEmail", placeholder:"名前"%>
				<span class="fa fa-user form-control-icon" aria-hidden="true"></span>
			</div>


			<div class="form-group has-icon"><!--profile-->

				<label>Image</label>
				<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
			</div>


			<div class="form-group has-icon"><!--introduction-->
				<label>introduction</label>
				<%= f.text_area :introduction%>
				<span class="fa fa-user form-control-icon" aria-hidden="true"></span>
			</div>


			<%= f.submit "Update User" %>
		<% end %>
	</div>
</div>
<% if flash[:success_notice] %> <!-- 判定をしているだけ　successfullyの意味ではない-->
   <div class="flash">
   	<%= flash[:success_notice] %>
   </div>
<% end %>
<% if notice %>
	　　<p><%= notice %></p>
	<% end %>
	<% if alert %>
	   <p><%= alert %></p>
<% end %>
<% if book.errors.any? %>
   <%= book.errors.count %>errors prohibited this book from being saved:
	<% book.errors.full_messages.each do |message| %>
		<div class="form-error">
		  <%= message %>
		</div>
	<% end %>
<% end %>

<!-- ユーザインフォ部分　-->
	<div class='col-xs-3'>
		<h2>User info</h2>
		<table class='table'>
				<tr>
					<%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
				</tr>
				<tr>
					<th>name</th><th><%= user.name %></th>
				</tr>
				<tr>
					<th>introduction</th><th><%= user.introduction %></th>
				</tr>
		</table>
			<% if user.id == current_user.id %>
				<%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_21387" %>
			<%end%>

<!-- 投稿フォーム部分 -->
		<h2>New book</h2>

			<%= form_for(book) do |f| %>
				<div class="field row">
					<label for="book_title">Title</label>
					<%= f.text_field :title, class: "col-xs-12 book_title" %>
				</div>
				<div class="field row">
					<label for="book_body">Opinion</label>
					<%= f.text_area :body, class: "col-xs-12 book_body" %>
				</div>
				<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
			<% end %>
	</div>


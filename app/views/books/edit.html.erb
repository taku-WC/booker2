<div class='container'>
	<h1>Editing Book</h1>
	<% if @book.errors.any? %>
	   <%= @book.errors.count %>errors prohibited this book from being saved:
		<% @book.errors.full_messages.each do |message| %>
			<div class="form-error">
			  <%= message %>
			</div>
		<% end %>
	<% end %>
	<%= form_for(@book) do |f| %>
		<div class="field row">
			<label>Title</label>
			<%= f.text_field :title, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"Title" %>
		</div>
		<div class="field row">
			<label>Opinion</label>
			<%= f.text_area :body, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"Opinion" %>
		</div>
			<%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
	<% end %>

	<%= link_to "Show", book_path(@book.id) %>
	<%= link_to "Back", books_path %>
</div>